<link href="https://cdnjs.cloudflare.com/ajax/libs/magicsuggest/2.1.4/magicsuggest-min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/magicsuggest/2.1.4/magicsuggest-min.js"></script>
<div class="jobs">
    <div class="center">
      <%= form_with(url: "/jobs", method: "get", local: true, :class => 'search-form') do |f|%>
        <div class="input-field">
          <i class="material-icons prefix">search</i>
          <%= f.text_field :search, id:'search', class:'autocomplete', value:@search, type:"text", required:true, autocomplete:"off" %>
        </div>
        <%= f.submit "Buscar", name: nil, class: "waves-effect waves-light btn search-button" %>
      <% end %>
      <% @jobs.each do |j| %>
        <div class="row">
          <div class="col s12 m12 l12">
            <div class="card horizontal">
              <div class="card-content card-jobs">
                <div class="col s12 m2 l2">
                  <img class="responsive-img" src=<%= j[:image_url] %> />
                </div>
                <div class="wrapper-jobs col s12 m8 l8">
                  <p class="card-title"><%= j[:title] %></p>
                  <p class="jobs-company"><%= j[:company] %>, <i class="material-icons md-18">place</i><%= j[:locale] %></p>
                  <p class=""><i class="material-icons md-18">local_offer</i> <span class="tag"><%= j.tag.name %></span></p>
                </div>
                <div class="col s12 m2 l2 right-align">
                  <a href=<%= "/jobs/#{j[:id]}" %>><button class="visualizar-btn">Visualizar</button></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="row">
        <%= paginate @jobs %>
      </div>
    </div>
</div>
